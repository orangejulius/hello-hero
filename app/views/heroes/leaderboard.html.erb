<% content_for(:title, @hero.name) %>
<div class="row">
  <div class="span6">
    <h2>
      <img src="<%= @hero.big_profile_image_url %>" />
      <%= @hero.name %> 
      <small>
        <a href="<%= "http://twitter.com/#{@hero.screen_name}"%>">
          <%= "@#{@hero.screen_name}" %>
        </a>
      </small>
    </h2>

    <a href="" class="btn">Are you <%= @hero.name %>?</a>
  </div>
  <div class="span6">
    <h3>Latest Bids</h3>

    <% if @hero.bids.empty? %>
      <p>There are no bids yet for <%= @hero.name %>...</p>
    <% else %> 
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr> 
          <th>User</th>
          <th>Bid</th>
          <th>Date Submitted</th>
        </tr>
      </thead>
      <tbody id="bids">
        <%= render :partial => 'bids/bid', :collection => @bids %>
      </tbody>
    </table>
    <% end %>

    <p>Do you want to meet <%= @hero.name %>?</p>
    <% if current_user %>
      <p><strong>Submit a bid!</strong></p>
      <%= form_for(@bid, :html => { :class => 'form-inline' }) do |f| %>
        <div class="input-prepend">
        <span class="add-on">$</span>
        <%= f.text_field :amount, :class => 'span2' %>
        </div>
        <%= f.hidden_field :twitter_verified_user_id, :value => @hero.id %> 
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.button 'Submit Bid', :class => 'btn' %>
      <% end %>
    <% else %>
      Please <%= link_to 'log in', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> first to bid for an hour of this hero's time!
    <% end %>
  </div>
</div>

<div class="row">
</div>
